{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}
	<div class="container-xl">
		<h1>Connexion</h1>

		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		<form method="post">

			{{ form_start(formView, {'attr': {'class': 'form'}}) }}
			<div class="form-group">
				{{ form_label(formView.email, 'Email', {'label_attr': {'class': 'control-label'}}) }}
				{{ form_widget(formView.email, {'attr': {'class': 'form-control'}}) }}
			</div>
			<div class="form-group">
				{{ form_label(formView.password, 'Password', {'label_attr': {'class': 'control-label'}}) }}
				{{ form_widget(formView.password, {'attr': {'class': 'form-control'}}) }}
			</div>
			<button type="submit" class="btn btn-primary">Se connecter</button>
			{{ form_end(formView) }}

		</div>
	</form>
{% endblock %}
